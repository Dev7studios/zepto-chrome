{
    "name": "Zepto Link Shortener",
    "short_name": "Zepto",
    "version": "0.1.1",
    "description": "A simple, secure and fast link shortener",
    "author": "Dev7studios",
    "homepage_url": "https://zepl.ink",
    "permissions": ["tabs", "storage", "https://zepl.ink/"],
    "options_page": "options.html",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "48": "images/48.png",
            "128": "images/128.png"
        }
    },
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "manifest_version": 2
}